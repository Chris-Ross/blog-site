<main>
   <form action="/posts/add" method="POST">
      <label> Title </label><input maxlength="20" type="text" name="title" />
      <label></label>Author </label><select name="author">
         {{#each authors}}
         <option value="{{id}}">{{author}}</option>
         {{/each}}
      </select>
      <label></label>Category </label><select name="category">
         {{#each categories}}
         <option value="{{id}}">{{category}}</option>
         {{/each}}
      </select>
      <label> Body </label><input type="text" name="body" />
      <fieldset>
         <legend>Tags</legend>
         {{#each tags}}
         <label><input type="checkbox" name="tag" value="{{id}}"> {{tag}} </label>
         {{/each}}
      </fieldset>
      <button type="submit">Submit</button>
   </form>
   <ul>
      {{#each posts}}
            <figure>
               <ul>
                  <li> Title: {{title}}</li>
                  <li> Author: {{author}}</li>
                  <li> Category: {{category}}</li>
                  <li> Body: {{body}}</li>
                  <li> Tag: {{tag}}</li>
               </ul>
            </figure>
      {{/each}}
   </ul>
</main>