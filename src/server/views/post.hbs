<main>
    <div class="hero-image">
        <h1 class="CAT-s-h1">{{post.title}}</h1>
    </div>
    <section class="post-section">
        {{#each post.authors}}
        Author: <br> <a href="/authors/{{id}}" class="post-section__author">{{author}}</a>
        {{/each}}
        <div class="post-section__flex">
            <figure>
                <img src="{{post.imageUrl}}" alt="Blog Post" class="post-section__image"></figure>
            <p class="post-section__body"> Body: {{post.body}}</p>
        </div>

    </section>
    <ul class="post-section__CAT">
        {{#each post.categories}}
        <li> Category: <a href="/categories/{{id}}">{{category}}</a></li>
        {{/each}}
        {{#each post.tags}}
        <li> Tag: <a href="/tags/{{id}}">{{tag}}</a></li>
        {{/each}}
    </ul>
</main>